---
const { content } = Astro.props;
---

<section
  class="bg-card bg-[url('src/assets/images/enrollment-journey.png')] bg-center bg-no-repeat bg-blend-multiply"
>
  <div class="mx-auto max-w-screen-xl px-4 py-24 text-center lg:py-56">
    <h1
      class="mb-4 text-4xl leading-none font-extrabold tracking-tight text-white md:text-5xl lg:text-6xl"
    >
      {content.jumbotron.headline}
    </h1>
    <p class="mb-8 text-lg font-normal text-gray-300 sm:px-16 lg:px-48 lg:text-xl">
      {content.jumbotron.subheadline}
    </p>
    <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
      <a
        href={content.jumbotron.toplink.href}
        class="bg-accent text-brand-dark focus:ring-brand inline-flex items-center justify-center rounded-lg px-5 py-3 text-center text-base font-black focus:ring-4"
      >
        {content.jumbotron.toplink.text}
        <svg
          class="ms-2 h-3.5 w-3.5 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
      <a
        href={content.jumbotron.bottomlink.href}
        class="hover:bg-card-dark focus:ring-brand inline-flex items-center justify-center rounded-lg border border-white px-5 py-3 text-center text-base font-bold text-white focus:ring-4 sm:ms-4"
      >
        {content.jumbotron.bottomlink.text}
      </a>
    </div>
  </div>
</section>
